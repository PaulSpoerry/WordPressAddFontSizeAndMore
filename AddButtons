function enable_more_buttons($buttons) {
  $buttons[] = 'fontselect';
  $buttons[] = 'fontsizeselect';
  $buttons[] = 'styleselect';
  $buttons[] = 'subscript';
  $buttons[] = 'superscript';
  $buttons[] = 'cleanup';
  $buttons[] = 'cut';
  $buttons[] = 'copy';
  return $buttons;
}
add_filter("mce_buttons_3", "enable_more_buttons");

